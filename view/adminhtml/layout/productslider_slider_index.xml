<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<title>Productslider - Slider Management</title>
	</head>
    <update handle="formkey"/>
    <update handle="productslider_slider_grid_block"/>
    <body>
		<referenceBlock name="page.title">
			<action method="setPageTitle">
				<argument name="pageTitle" xsi:type="string">Product Slider Management</argument>
			</action>
		</referenceBlock>
        <referenceContainer name="content">
            <block class="Dotsquares\ProductSlider\Block\Adminhtml\Slider" name="admin.block.productslider.slider.grid.container" />
        </referenceContainer>
    </body>
</page> 